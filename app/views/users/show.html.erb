<div class="flex flex-col">
  <ul>
    <%= render partial: "layouts/user_card" %>  
  <% if @user %>
    <p class="pl-2 mt-2"><%= @user.name %>  <%= link_to "Posts", user_posts_path(@user)  %> </p>
  <% @user.recent_posts.each_with_index do |post, index| %>

    <div class="border mt-4">

    <li class="my-3 h-100">
      <div class="flex flex-col border items-start min-h-100 h-72 p-4 w-100">
        <%= link_to "Post ##{index + 1}", user_post_path(@user, post), class: "text-xl mb-4" %>
        <div class="overflow-hidden overflow-ellipsis h-48">
          <%= post.text %>
        </div>
        <div class="flex gap-2 relative self-end top-4 left-42">
          <p> comments:
            <%= link_to post.commentsCounter, user_post_path(@user, post) %>
          </p>,
          <p> likes:
            <%= link_to post.likesCounter, user_post_path(@user, post) %>
          </p>
        </div> 
      </div>
    </li>
    </div>
  <% end %>
<% else %>
     <p>User not found.</p>
  <% end %>
</ul>

<button class="self-center m-2">
  <%= link_to "See All Posts", root_path, class: "bg-indigo-600 text-white no-underline p-2 rounded-lg" %>
</button>


</div>