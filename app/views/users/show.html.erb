<p style="color: green"><%= notice %></p>

<%= render partial: "users/user", locals: { user: @user } %>

<% if @user %>
    <p class="pl-2 mt-2"><%= @user.name %>  <%= link_to "Posts", user_posts_path(@user)  %> </p>
  <% @user.recent_posts.each_with_index do |post, index| %>

    <div class="border mt-4">

    <li class="my-3 h-100 list-none" style="list-style:none;">
          <h2>Title: <%=post.title%></h2>
      <div class="flex flex-col items-start min-h-100 h-72 p-4 w-100">
       
        <div style="margin-top:2rem" class="overflow-hidden overflow-ellipsis h-48">
          <%= post.text %>
        </div>
        <div class="flex gap-2 relative self-end top-4 left-42">
          <p> comments:
            <%= link_to post.commentsCounter, user_post_path(@user, post) %>
          </p>,
          <p> likes:
            <%= link_to post.likesCounter, user_post_path(@user, post) %>
          </p>
        </div> 
      </div>
    </li>
    </div>
  <% end %>
<% else %>
     <p>User not found.</p>
  <% end %>
</ul>

</div>

<div class="flex mt-4" style="justify-content:center; margin-top:1rem;">
  <button class="border rounded-lg" style="padding: 0.5rem; border-radius:10px"><%= link_to "Back to users", users_path %></button>

</div>


   

         